{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "description": "A user for the application",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the user",
      "type": "string",
      "minLength": 3
    },
    "age": {
      "description": "Age of the user",
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "age"
  ]
}